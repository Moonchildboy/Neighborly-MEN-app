<%- include('../partials/header.ejs')%>

	<h1>My Community</h1>

	<p>Building Address: <%=address%></p>

	<ul>
		<% for (let i = 0; i < units.length; i++) { -%>
			<a href="buildings/unit/<%=units[i]._id%>">Unit Number: <%=units[i].number%></a>
			<% if (building.landlord == userId) { %> 
	  		<a href="/buildings/unit/<%=units[i]._id%>/edit">(Edit <%=units[i].number%>)
	  		</a>
			<form method="POST" action="/users/buildings/unit/<%=units[i]._id%>?_method=DELETE">
			<button>Delete Unit</button>
			</form>

    		<%}%>

			<% for (let j = 0; j < units[i].tenants.length; j++) { -%>
			<li>
				<a href="/users/<%=units[i].tenants[j]._id%>">
					
					<%=units[i].tenants[j].firstName%> <%=units[i].tenants[j].lastName%>
				</a>
			</li> 
			<% } -%>
		<% } -%>
	</ul>

